      function loadVideos() {
          const container = document.querySelector('.feed');
          container.innerHTML = '';
          videos.forEach(video => {
              const videoCard = document.createElement('div');
              videoCard.classList.add('video-card', video.tag);
              videoCard.innerHTML = `
                  <video controls>
                      <source src="${video.src}" type="video/mp4">
                  </video>
                  <h3>${video.title}</h3>
                  <p>${video.desc} <span class='hashtag' onclick="filterVideos('${video.tag}')">#${video.tag}</span></p>
              `;
              container.appendChild(videoCard);
          });

          // Ajustar object-fit ao dar play/pause
          document.querySelectorAll('video').forEach(vid => {
              vid.addEventListener('play', () => {
                  vid.style.objectFit = 'contain';
                  vid.style.aspectRatio = '';
              });
              vid.addEventListener('pause', () => {
                  vid.style.objectFit = 'cover';
                  vid.style.aspectRatio = '1/1';
              });
          });
      }

      function filterVideos(category) {
          document.querySelectorAll('.video-card').forEach(card => {
              card.style.display = (category === 'all' || card.classList.contains(category)) ? 'flex' : 'none';
          });
          document.querySelectorAll('.menu span').forEach(span => {
              span.classList.remove('active');
          });
          document.querySelector(`[data-category="${category}"]`).classList.add('active');
      }

      function openPopup() {
          document.getElementById('overlay').style.display = 'block';
          document.getElementById('email-popup').style.display = 'block';
      }

      function closePopup() {
          document.getElementById('overlay').style.display = 'none';
          document.getElementById('email-popup').style.display = 'none';
      }

      function copyEmail() {
          const text = document.getElementById('email-text').innerText;
          if (navigator.clipboard) {
              navigator.clipboard.writeText(text)
              .then(() => {
                  alert('Email copiado: ' + text);
              })
              .catch(() => {
                  fallbackCopyTextToClipboard(text);
              });
          } else {
              fallbackCopyTextToClipboard(text);
          }
      }

      function fallbackCopyTextToClipboard(text) {
          // Criar textArea fora da tela para n√£o pular no scroll
          const textArea = document.createElement('textarea');
          textArea.style.position = 'fixed';
          textArea.style.left = '-9999px';
          textArea.value = text;
          document.body.appendChild(textArea);
          textArea.focus();
          textArea.select();
          try {
              document.execCommand('copy');
              alert('Email copiado: ' + text);
          } catch (err) {
              console.error('Fallback: Oops, unable to copy', err);
          }
          document.body.removeChild(textArea);
      }

      loadVideos();
  </script>
